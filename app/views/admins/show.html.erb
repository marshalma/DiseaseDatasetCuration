<div class = "row">
  <h3>Admin</h3>
</div>


<div class = "row">

  <div class = "col-sm-2">
    <%= link_to "Configuration", '/config'%>
  </div>

  <div class = "col-sm-8">

  </div>

  <div class = "col-sm-2">
    <div class = row>
      <%= form_tag admins_show_path(), :method => :post, :id => "query_form" do%>
      <%= search_field_tag 'search', nil, :class => 'special_input', :placeholder => 'Query...', :id => 'query' %>
      <% end %>
    </div>
  </div>

</div>

<div class = "row">
  <div class = "col-sm-12">
      <div class="table-responsive">
        <table class = "table">
          <thead>
            <tr>
              <th class = "col-md-2">ID</th>
              <th class = "col-md-4">Disease</th>
              <th class = "col-md-4">Accession</th>
              <th class = "col-md-1">Related#</th>
              <th class = "col-md-1">Unrelated#</th>
            </tr>
          </thead>
          <tbody>
            <%= render @diseases %>
          </tbody>
        </table>
      </div>
  </div>
</div>


<div class = "row">
  <div class = "col-sm-10">
    <%= will_paginate @diseases %>
  </div>
  <div class = "col-sm-2">
    <div class = "row">
      <%= link_to "Show All", "/admin", :class => "btn btn-primary center-block" %>
    </div>
  </div>
</div>
