<div class = "row">
  <h1>Admin</h1>
</div>


<div class = "row">

  <div class = "col-sm-4">
    <div class = "row">
      <ul class="list-group">
        <li class="list-group-item text-right"><span class="pull-left">
          <strong>Number of rows each page:</strong></span>
          <%=get_num_per_page%>
        </li>
        <li class="list-group-item text-right">
          <span class="pull-left"><strong>Change to:</strong></span>
          <%= form_tag admin_query_path, :method => :post, :id => 'updateForm' do%>
            <%= text_field_tag(:num_per_page) %>
            <!-- <%= submit_tag 'Submit', :class => "btn btn-success button_wid"%> -->
          <% end %>
        </li>
      </ul>
    </div>
    <div class = "row">
        <button id="submitBtn" class="btn btn-primary">Submit</button>
    </div>
  </div>

  <div class = "col-sm-8">
      <!-- <h1>Diseases (<%= @diseases.count %>)</h1> -->
      <div class="table-responsive">
        <table class = "table">
          <thead>
            <tr>
              <th class = "col-md-2">ID</th>
              <th class = "col-md-4">Disease</th>
              <th class = "col-md-4">Accession</th>
              <th class = "col-md-1">Related#</th>
              <th class = "col-md-1">Unrelated#</th>
            </tr>
          </thead>
          <tbody>
            <%= render @diseases %>
          </tbody>
        </table>
      </div>

  </div>
</div>

<div class = "row">
  <div class = "col-sm-4"> </div>
  <div class = "col-sm-6">
    <%= will_paginate @diseases %>
  </div>
  <div class = "col-sm-2">
    <%= link_to "Configuration", '/config', class: "btn btn-primary center-block" %>
  </div>
</div>
